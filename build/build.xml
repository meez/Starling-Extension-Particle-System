<?xml version="1.0"?>
<project name="particles" basedir="../src" default="build">

<property file="C:\meez\svn.donnerwood\meeznation\trunk\build.properties" />

<property name="lib.root" location="C:\meez\svn.donnerwood\meeznation\trunk\mobile\lib"/>
<property name="deploy.dir" location="${lib.root}\starling-particles"/>
<property name="src.dir" location="." />
<property name="config.xml" location="../build/config.xml"/>

<import file="C:\meez\svn.donnerwood\meeznation\trunk\support\ant\flex.xml"/>

<target name="build" description="Builds the library (.swc file)">
<mkdir dir="${deploy.dir}"/>

	<compc 
		src="${src.dir}"
		configxml="${config.xml}"
		debug="false"
		sdkConfig="air"
		sdkPath="${flexsdk.home}"
		output="${deploy.dir}/${ant.project.name}.swc">
		<arg line="-external-library-path+=${lib.root}\starling\starling.swc"/>
	</compc>

</target>
	
</project>
